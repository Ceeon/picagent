{
  "name": "@chengfeng2025/picagent-jimeng",
  "version": "1.2.4",
  "description": "Agent × MCP : 即梦工作站 - AI图片生成智能工作台",
  "main": "dist/server.js",
  "bin": {
    "picagent": "./bin/picagent.js"
  },
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc",
    "dev": "ts-node src/server.ts",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "postinstall": "node scripts/postinstall.js",
    "pkg:build": "npm run build && pkg . --output releases/picagent",
    "pkg:mac": "npm run build && pkg . --targets node18-macos-x64,node18-macos-arm64 --output releases/picagent-mac",
    "pkg:win": "npm run build && pkg . --targets node18-win-x64 --output releases/picagent-win.exe",
    "pkg:linux": "npm run build && pkg . --targets node18-linux-x64 --output releases/picagent-linux",
    "pkg:all": "npm run build && npm run pkg:mac && npm run pkg:win && npm run pkg:linux"
  },
  "files": [
    "dist/",
    "public/",
    "bin/",
    "scripts/",
    "templates/",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "claude",
    "mcp",
    "jimeng",
    "ai",
    "image-generation",
    "agent",
    "ai-art"
  ],
  "author": "chengfeng",
  "license": "MIT",
  "homepage": "https://github.com/chengfeng2025/picagent-jimeng",
  "repository": {
    "type": "git",
    "url": "https://github.com/chengfeng2025/picagent-jimeng.git"
  },
  "bugs": {
    "url": "https://github.com/chengfeng2025/picagent-jimeng/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "open": "^8.4.2",
    "socket.io": "^4.6.1",
    "@lydell/node-pty": "^1.1.0"
  },
  "bundledDependencies": [
    "@lydell/node-pty"
  ],
  "optionalDependencies": {
    "@homebridge/node-pty-prebuilt-multiarch": "^0.11.14",
    "node-pty-prebuilt-multiarch": "^0.11.0",
    "node-pty": "^1.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "pkg": {
    "scripts": [
      "dist/**/*.js"
    ],
    "assets": [
      "public/**/*",
      "templates/**/*"
    ],
    "targets": [
      "node18-macos-x64",
      "node18-macos-arm64",
      "node18-win-x64",
      "node18-linux-x64"
    ],
    "outputPath": "releases"
  }
}
